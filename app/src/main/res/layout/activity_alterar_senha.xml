<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlterarSenha"
    android:background="@color/azulFundo">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:src="@drawable/logo_app_150x" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"

        android:text="Alterar a Senha"

        android:shadowColor="@color/cinza"
        android:shadowRadius="11"
        android:shadowDx="5"
        android:shadowDy="5"

        android:textSize="45dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/inter_variablefont"/>
    <!-- DIV do UsuÃ¡rio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="1dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lock_senha2"
                android:layout_marginRight="1dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nova Senha"
                android:textSize="20dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/set_email_login"
            android:hint="Insira a sua nova senha..."
            android:inputType="textPassword"
            android:maxLines="1"

            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"

            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/white"

            />
    </LinearLayout>
    <!-- Fim da DIV -->


    <!-- DIV do Senha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="1dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lock_senha"
                android:layout_marginRight="1dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repita a Senha"
                android:textSize="20dp"
                android:textColor="@color/black"/>

        </LinearLayout>
        <!-- android:maxLength="7" -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/set_email_login"

            android:maxLines="1"
            android:inputType="textPassword"
            android:singleLine="true"

            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"

            android:hint="Insira a mesma senha..."
            android:textColorHint="@color/white"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <!-- Fim da DIV -->


    <Button
        android:id="@+id/bt_AltSenha_Confirmar"

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="30dp"
        app:backgroundTint="@color/azulFundoEscuro"
        android:background="@drawable/bt_login"


        android:text="Confirmar"
        android:textSize="25dp" />


    <Button
        android:id="@+id/bt_AltSenhaSup"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="53dp"

        android:text="Entrar em contato com o suporte"
        android:textSize="15dp"

        android:background="#00000000"/>

</LinearLayout>