<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cadastro"
    android:background="@color/azulFundo">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"

        android:text="Cadastre-se"

        android:shadowColor="@color/cinza"
        android:shadowRadius="11"
        android:shadowDx="5"
        android:shadowDy="5"

        android:textSize="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/inter_variablefont"/>

    <!-- Div CAD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"

        android:background="@drawable/set_email_login"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:paddingVertical="1dp"
        >

        <!-- entrada dado Nome -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_nome_person"
                android:layout_marginRight="1dp"
                />

            <EditText
                android:id="@+id/cad_txtNome"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:hint=" Nome"
                android:inputType="text"
                android:maxLines="1"

                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:textSize="17dp"

                />
        </LinearLayout>

        <!-- entrada dado Sobrenome -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_pessoal_lastnome"
                android:layout_marginRight="1dp"
                />

            <EditText
                android:id="@+id/cad_txtSobreNome"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:hint=" Sobrenome"
                android:inputType="text"
                android:maxLines="1"


                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:textSize="17dp"

                />
        </LinearLayout>

        <!-- entrada dado E-mail -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_carta_email"
                android:layout_marginRight="1dp"
                />

            <EditText
                android:id="@+id/cad_txtEmail"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:hint=" E-mail"
                android:inputType="text"
                android:maxLines="1"



                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:textSize="17dp"

                />
        </LinearLayout>

        <!-- entrada dado CPF -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_cpf"
                android:layout_marginRight="1dp"
                />

            <EditText
                android:id="@+id/cad_txtCPF"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:hint=" CPF"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="11"


                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:textSize="17dp"

                />
        </LinearLayout>

        <!-- entrada dado Telefone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_telefone"
                android:layout_marginRight="1dp"
                />

            <EditText
                android:id="@+id/cad_txtTelefone"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:hint=" Telefone"
                android:inputType="text"
                android:maxLines="1"


                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:textSize="17dp"

                />
        </LinearLayout>

        <!-- entrada dado Senha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lock_senha"
                android:layout_marginRight="1dp"
                />

            <EditText
                android:id="@+id/cad_txtSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:hint=" Senha"
                android:inputType="textPassword"
                android:maxLines="1"


                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:textSize="17dp"

                />

        </LinearLayout>

        <!-- entrada dado Confirmar senha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lock_senha2"
                android:layout_marginRight="1dp"
                />


            <EditText
                android:id="@+id/cad_txtSenha2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint=" Confirmar senha"
                android:inputType="textPassword"
                android:maxLines="1"


                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:textSize="17dp"

                />


        </LinearLayout>




    </LinearLayout>

    <!-- Caixa Termos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="1dp">

        <CheckBox
            android:id="@+id/cad_termos"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Li e aceito os "
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/bt_CadPopUp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="0dp"
            android:text="Termos de uso..."
            android:textColor="@color/azulLink"
            android:background="#00000000"
            />

    </LinearLayout>

    <!-- ButÃ£o -->
    <Button
        android:id="@+id/bt_CadCriar"

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        app:backgroundTint="@color/azulFundoEscuro"
        android:background="@drawable/bt_login"


        android:text="Criar"
        android:textSize="25dp" />

    <!-- texto Cadastros Ongs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="53dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Cadastro de ONGs "
            android:textSize="15dp"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/bt_CadONGS"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"



            android:text="www.cadOngs.com!"
            android:autoLink="web"
            android:textSize="15dp"

            android:padding="0dp"
            android:background="#00000000"

            />

    </LinearLayout>


</LinearLayout>